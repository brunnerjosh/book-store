body
  background-color #EAEAEA
  font-family 'NTR', sans-serif
  font-size 18px

a
  text-decoration none
  color #929090
  &:hover,
  &.is-active
    color #80B9E5
    cursor pointer

.clearfix
  overflow auto

.container
  width 1200px
  position relative
  margin 0 auto

input
  padding 4px
  box-sizing border-box

.visible
  visibility visible

.invisible
  visibility hidden

muted
  color #929090

button
  height 38px

  &:hover
    cursor pointer

  &.s-small
    height 28px
  &.s-large
    height 48px

for $i in (1)..(100)
  .width-{$i}
    width ($i) + 0% !important

.pane-left
  width 30%
  display inline-block

.pane-right
  width 70%
  float right
  display inline-block
