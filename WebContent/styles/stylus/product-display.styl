.products
  width 100%
  .product
    display inline-block
    position relative
    margin 10px
    transition all 250ms ease
    cursor pointer

    .product-name
      font-size 1.25em
      line-height 1.125

    .product-info
      position absolute
      bottom 0
      left 0
      width 100%
      height 100px
      padding 15px
      box-sizing border-box
      background rgba(0,0,0,.8)
      opacity 0
      transition opacity 250ms ease
      color #fff

    .product-title
      line-height 1
      position absolute
      top 6px
      right 10px
      left 10px
    .product-price
      text-align right
      bottom 6px
      position absolute
      line-height 1
      height auto
      right 10px

    .product-rating
      position absolute
      bottom 10px
      left 10px
      width 86px
      .rating-title
        font-size 12px
        line-height 1.2
      .rating-bar
        background-color #EAEAEA
        position relative
        height 12px
        width 100%
        overflow hidden

        .rating-value
          background-color #80B9E5
          height 12px

    &:hover
      box-shadow 0 0 16px 0 rgba(0,0,0,.2)
      transform scale(1.25)
      z-index 10

      .product-info
        opacity 1

    img
      height 262px
